---
import { statusColorClass } from '../lib/utils';

interface Props {
  status: string;
  label?: string;
}

const { status, label } = Astro.props;
const displayLabel = label || status;
---

<span class={`text-[10px] font-semibold uppercase tracking-wide px-1.5 py-0.5 rounded ${statusColorClass(status)}`}>
  {displayLabel}
</span>
