---
interface Props {
  colorClass?: string;
  class?: string;
}

const { colorClass = 'bg-surface text-muted-foreground', class: className = '' } = Astro.props;
---

<span class:list={['text-[10px] font-semibold uppercase tracking-wide px-1.5 py-0.5 rounded', colorClass, className]}>
  <slot />
</span>
