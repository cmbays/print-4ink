{
  "$ref": "#/definitions/sessions",
  "definitions": {
    "sessions": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "subtitle": {
          "type": "string"
        },
        "date": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "phase": {
          "type": "integer",
          "minimum": 1,
          "maximum": 3
        },
        "vertical": {
          "type": "string",
          "enum": [
            "quoting",
            "customer-management",
            "invoicing",
            "price-matrix",
            "jobs",
            "screen-room",
            "garments",
            "dashboard",
            "meta"
          ]
        },
        "verticalSecondary": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "stage": {
          "type": "string",
          "enum": [
            "research",
            "interview",
            "breadboarding",
            "implementation-planning",
            "build",
            "review",
            "learnings"
          ]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "feature",
              "build",
              "plan",
              "decision",
              "research",
              "learning"
            ]
          }
        },
        "sessionId": {
          "type": "string"
        },
        "branch": {
          "type": "string"
        },
        "pr": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "complete",
            "in-progress",
            "superseded"
          ],
          "default": "complete"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "subtitle",
        "date",
        "phase",
        "vertical",
        "stage",
        "tags"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}