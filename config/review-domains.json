{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Maps file globs to review domains for automated PR classification",
  "domains": {
    "auth": {
      "label": "Authentication & Security",
      "globs": [
        "middleware.ts",
        "src/app/(auth)/**",
        "src/shared/actions/auth.ts",
        "src/infrastructure/auth/**",
        "src/features/auth/**"
      ]
    },
    "ui": {
      "label": "User Interface & Components",
      "globs": [
        "src/app/**/*.tsx",
        "src/shared/ui/**",
        "src/features/*/components/**",
        "app/**/*.tsx"
      ]
    },
    "api": {
      "label": "API Routes & Server Actions",
      "globs": ["src/app/api/**", "src/features/*/actions.ts", "src/shared/actions/**"]
    },
    "infrastructure": {
      "label": "Infrastructure & Configuration",
      "globs": ["src/infrastructure/**", "src/shared/lib/**", "config/**", "lib/**"]
    },
    "database": {
      "label": "Database & Data Access",
      "globs": ["src/infrastructure/repositories/**", "drizzle/**", "*.sql"]
    },
    "testing": {
      "label": "Tests & Test Configuration",
      "globs": ["**/__tests__/**", "**/*.test.ts", "**/*.test.tsx", "vitest.config.ts"]
    },
    "documentation": {
      "label": "Documentation & Comments",
      "globs": ["**/*.md", "docs/**", "knowledge-base/**"]
    }
  }
}
