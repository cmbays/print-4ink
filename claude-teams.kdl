layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    tab name="Claude Team Control" {
        pane split_direction="vertical" {
            // Main Orchestrator
            pane command="npx" {
                args "claude-code-templates@latest" "--teams"
                name "ORCHESTRATOR"
                focus true
            }
            // Side monitor for Team Logs/Btop
            pane split_direction="horizontal" {
                pane command="btop" name="RESOURCES"
                pane name="DOCS/NOTES" command="zk" {
                    args "last"
                }
            }
        }
    }
}
