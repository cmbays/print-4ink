{
  "enabledPlugins": {
    "nextjs-vercel-pro@claude-code-templates": true
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/shaping-ripple.sh"
          }
        ]
      }
    ]
  },
  "env": {
    "ANTHROPIC_DEFAULT_SONNET_MODEL": "claude-sonnet-4-6-1m",
    "ANHTHROPIC_DEFAULT_HAIKU_MODEL": "claude-sonnet-4-6-1m"
  }
}
