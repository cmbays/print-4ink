# Supabase connection pooler URL (Transaction mode) — server only
# In production: use the "Transaction mode" pooler URL from Supabase dashboard (port 6543)
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# Direct (non-pooled) DB URL — used by drizzle-kit for migrations only, server only
# In production: use the "Direct connection" URL from Supabase dashboard (port 5432)
# Locally this is the same as DATABASE_URL (no pooler in local dev)
DIRECT_URL=postgresql://postgres:postgres@localhost:54322/postgres

# Supabase project URL — browser-safe
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321

# Supabase anon/publishable key — browser-safe
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your_anon_key_here

# Service role key (bypasses RLS) — server only, NEVER expose to browser
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Protects POST /api/catalog/sync — server only
ADMIN_SECRET=your_admin_secret_here
